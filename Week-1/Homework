
void setup () {
  background(40,0,100);
  size(500, 500);
  smooth();
}

void draw() {
  if (mousePressed) {
    fill(255,0,0,100);
    ellipse(mouseX, mouseY, 50, 50);
    triangle(mouseX, mouseY, 10, 10, 80, 80);
  } else {
    fill(0,255,0,100);
  }
  line(mouseX, mouseY, 1,1);
  rect(mouseX, mouseY,50,50);
  //arc(mouseX, mouseY,80,80,0,HALF_PI);
  
}
